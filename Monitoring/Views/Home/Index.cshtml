@{
    ViewData["Title"] = "CO2 Monitor";
}
<script src="~/wwwroot/lib/jquery/dist/jquery.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>$(('.file-upload').file_upload();)</script>



<div>
    <form method="get" asp-controller="Home" asp-action="BackupButton" class="align-self-center">
        <input type="submit" class="mb-3 btn-primary" value="Архивировать" />
    </form>
</div>
<div class="body">

    <div class="areas-list">
        <div class="upload-container">

            <div class="file-area">
                <label>
                    <span class="input-file-text" type="text"></span>
                    <input type="file" name="file">
                    <span class="input-file-btn">Выберите или перетащите файл</span>
                </label>
            </div>   
            <div class='confirm-area'>
                <form method="get" asp-controller="Home" asp-action="AddFile" class="align-self-center">
                    <input type="submit" class="mb-3 btn-primary" value="Отправить" />
                </form>
            </div>
        </div>
    </div>

        <div class="graph">
            <canvas id="myChart"></canvas>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        </div>

        <script>
            const ctx = document.getElementById('myChart');
            new Chart(ctx,
                {
                    type: 'line',

                    data: {
                        labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
                        datasets: [{
                            label: '# of Votes',
                            data: [12, 19, 3, 5, 2, 3],
                            borderWidth: 4,
                            borderColor: 'blue',


                        },
                        {
                            label: 'sdsdafs',
                            data: [24, 12, 5, 1, 16, 1],
                            borderWidth: 4,
                            borderColor: 'black',

                        }
                        ]
                    },
                    options: {
                        tension: 0.15,
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
        </script>
</div>
